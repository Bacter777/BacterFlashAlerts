<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/hai_muoi_dp"
    android:background="@color/color_bg_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="@string/battery_percent"
        android:textSize="@dimen/muoi_lam_sp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/hai_muoi_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_top_text"
            android:textSize="@dimen/muoi_lam_sp"
            android:text="@string/threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_battery_below"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_top_text"
            android:textSize="@dimen/muoi_lam_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
    <SeekBar
        android:id="@+id/sb_battery_below"
        android:theme="@style/AppThemeSeekbar"
        android:thumb="@drawable/custom_thumb"
        android:min="0"
        android:max="100"
        android:layout_marginTop="@dimen/hai_muoi_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="o" />
    <RelativeLayout
        android:layout_marginTop="@dimen/hai_muoi_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_toStartOf="@+id/tv_save"
            android:textColor="@color/color_white"
            android:textSize="@dimen/muoi_lam_sp"
            android:layout_marginEnd="@dimen/muoi_lam_dp"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_save"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/muoi_lam_sp"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>